{
  "name": "pgctl",
  "version": "1.0.0",
  "description": "A Node.js CLI tool wrapper for PostgreSQL DB operations and dbmate migrations",
  "main": "index.js",
  "bin": {
    "pgctl": "./index.js"
  },
  "scripts": {
    "start": "node index.js",
    "build": "pkg . --targets node18-win-x64,node18-linux-x64,node18-macos-x64,node18-macos-arm64 --out-path ./build/",
    "build:win": "pkg . --targets node18-win-x64 --output ./build/pgctl-win.exe",
    "build:linux": "pkg . --targets node18-linux-x64 --output ./build/pgctl-linux",
    "build:macos": "pkg . --targets node18-macos-x64 --output ./build/pgctl-macos",
    "build:macos-arm": "pkg . --targets node18-macos-arm64 --output ./build/pgctl-macos-arm64",
    "build:all": "npm run build:win && npm run build:linux && npm run build:macos && npm run build:macos-arm"
  },
  "pkg": {
    "scripts": [
      "index.js",
      "src/**/*.js"
    ],
    "assets": [
      ".env.example"
    ],
    "targets": [
      "node18-win-x64",
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-macos-arm64"
    ],
    "outputPath": "build"
  },
  "keywords": [
    "postgresql",
    "postgres",
    "cli",
    "database",
    "dbmate",
    "migrations"
  ],
  "author": "Chirag Makwana",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "inquirer": "^8.2.5",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}